<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <include layout="@layout/toolbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46.0dip"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/et_timu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_weight="1"
            android:background="@drawable/input_search_bg"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:inputType="text"
            android:hint="搜索试题名称"
            android:singleLine="true"
            android:textColor="#ff242e38"
            android:textColorHint="#ff929292"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_timu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:gravity="center"
            android:textColor="#ff929292"
            android:text="搜索"
            android:textSize="16.0sp" />
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ListView
        android:id="@+id/lv_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
    <TextView
        android:id="@+id/tv_wanquan1"
        android:layout_below="@+id/lv_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff929292"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="已加载完全"/>
</RelativeLayout>
</LinearLayout>
